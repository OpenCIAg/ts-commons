{
  "name": "@ciag/commons",
  "version": "0.0.1",
  "description": "Some utils things",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "**/*"
  ],
  "standard": {
    "ignore": [
      "coverage/**",
      "node_modules/**"
    ]
  },
  "scripts": {
    "prebuild": "rm -rf dist",
    "build": "tsc",
    "postbuild": "cp package.json dist/",
    "test": "nyc --reporter=html --reporter=text mocha test/**/*.spec.ts",
    "predeploy": "npm run build",
    "deploy": "cd dist/ && npm publish --access public",
    "coverage": "nyc report --reporter=text-lcov | codeclimate-test-reporter ",
    "docs": "quickdoc"
  },
  "author": "CIAg",
  "license": "Apache-2.0",
  "devDependencies": {
    "@types/chai": "^4.1.4",
    "@types/mocha": "^5.2.5",
    "chai": "^4.1.2",
    "chai-string": "^1.4.0",
    "codeclimate-test-reporter": "^0.5.0",
    "mocha": "^5.2.0",
    "nyc": "^14.1.1",
    "quickdoc": "0.0.2-beta.0",
    "ts-node": "^7.0.0",
    "typescript": "^2.9.2"
  },
  "dependencies": {}
}
